<?xml version="1.0" encoding="utf-8"?>
<com.yangl.swipeback.ui.SwipeBackLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/view_swipe_back"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/view_scan_img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/view_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:textColor="#dddddd"
        android:textSize="16sp" />

</com.yangl.swipeback.ui.SwipeBackLayout>